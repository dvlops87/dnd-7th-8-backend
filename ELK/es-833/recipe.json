PUT recipe
{
    "settings": {
        "number_of_shards": 5,
        "number_of_replicas": 1,
        "analysis": {
            "analyzer": {
                "my_analyzer": {
                    "type": "custom",
                    "tokenizer": "nori_mix",
                    "filter": [
                        "lowercase"
                    ]
                }
            },
            "tokenizer": {
                "nori_mix": {
                     "type": "nori_tokenizer",
                     "decompound_mode": "mixed",
                     "discard_punctuation": false,
                     "user_dictionary_rules": [
                        "ì°¨"
                     ]
                }
             }
        }
    },
    "mappings": {
        "properties": {
            "recipe_id": {
                "type": "integer"
            },
            "customer_uuid": {
                "type": "keyword",
                "ignore_above": 256
            },
            "nickname": {
                "type": "keyword",
                "ignore_above": 256
            },
            "recipe_name": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                },
                "analyzer": "my_analyzer"
            },
            "img": {
                "type": "binary"
            },
            "price": {
                "type": "integer"
            },
            "main_meterial": {
                "type": "nested",
                "properties": {
                    "drink_id": {
                        "type": "integer"
                    },
                    "drink_name": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword",
                                "ignore_above": 256
                            }
                        },
                        "analyzer": "my_analyzer"
                    },
                    "large_category": {
                        "type": "keyword"
                    },
                    "medium_category": {
                        "type": "keyword"
                    },
                    "small_category": {
                        "type": "keyword"
                    },
                    "alcohol": {
                        "type": "integer"
                    }
                }
            },
            "sub_meterial": {
                "type": "nested",
                "properties": {
                    "meterial_id": {
                        "type": "integer"
                    },
                    "meterial_name": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword",
                                "ignore_above": 256
                            }
                        },
                        "analyzer": "my_analyzer"
                    }
                }
            },
            "tag_list": {
                "type": "nested",
                "properties": {
                    "tag": {
                        "type": "keyword"
                    }
                }
            },
            "like_cnt": {
                "type": "integer"
            },
            "reg_dtime": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss"
            }
        }
    }
}